{
  "compilerOptions": {
    "lib": ["es2022"],

    "module": "es6",
    "target": "es5",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "emitDecoratorMetadata": true
  },
  "ts-node": {
    "swc": true
  },
  "include": ["**/*.ts"],
  "exclude": ["/node_modules"]
}
